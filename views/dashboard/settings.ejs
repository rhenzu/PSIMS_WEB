<h1 class="page-title">Settings</h1>

<% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-success"><%= message %></div>
<% } %>
<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
<% } %>


<div class="card settings-card">
    <h2>Update Contact Information</h2>
    <form action="/dashboard/update-contact" method="POST" class="settings-form">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" value="<%= scholar.Email %>" readonly disabled>
            <small>Email address cannot be changed here.</small>
        </div>
        <div class="form-group">
            <label for="contactNumber">Contact Number</label>
            <input type="text" id="contactNumber" name="contactNumber" value="<%= scholar.ContactNumber %>" required>
             <small>Enter your current mobile number.</small>
        </div>
        <button type="submit" class="btn">Save Contact Number</button>
    </form>
</div>

<div class="card settings-card">
    <h2>Change Password</h2>
    <form action="/dashboard/change-password" method="POST" class="settings-form" id="changePasswordForm">
        <div class="form-group">
            <label for="currentPassword">Current Password</label>
            <input type="password" id="currentPassword" name="currentPassword" required>
        </div>
         <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="newPassword" required minlength="8">
             <small>Must be at least 8 characters long.</small>
        </div>
         <div class="form-group">
            <label for="confirmNewPassword">Confirm New Password</label>
            <input type="password" id="confirmNewPassword" name="confirmNewPassword" required minlength="8">
        </div>
        <div id="passwordError" class="form-error" style="display: none; color: red; margin-bottom: 10px;">Passwords do not match.</div>
        <button type="submit" class="btn">Change Password</button>
    </form>
</div>

<style>
    .settings-card { margin-bottom: 25px; }
    .settings-form .form-group { margin-bottom: 15px; }
    .settings-form label { display: block; margin-bottom: 5px; font-weight: 600; color: #4a5568; }
    .settings-form input[type="text"],
    .settings-form input[type="email"],
    .settings-form input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #cbd5e0;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 1em;
    }
    .settings-form input:disabled {
        background-color: #e2e8f0;
        cursor: not-allowed;
    }
    .settings-form small {
        font-size: 0.8em;
        color: #718096;
        display: block;
        margin-top: 3px;
    }
    .settings-form .btn {
         background-color: #4361EE; /* Example */
         color: white;
         padding: 10px 18px;
         border: none;
         border-radius: 5px;
         cursor: pointer;
         font-size: 0.95em;
         font-weight: 500;
         transition: background-color 0.2s ease;
    }
    .settings-form .btn:hover {
        background-color: #3A56D4; /* Darker shade */
    }
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }
    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
</style>

<script>
    const newPasswordInput = document.getElementById('newPassword');
    const confirmPasswordInput = document.getElementById('confirmNewPassword');
    const passwordErrorDiv = document.getElementById('passwordError');
    const changePasswordForm = document.getElementById('changePasswordForm');

    function validatePasswords() {
        if (newPasswordInput.value !== confirmPasswordInput.value) {
            passwordErrorDiv.style.display = 'block';
            return false;
        } else {
            passwordErrorDiv.style.display = 'none';
            return true;
        }
    }

    newPasswordInput.addEventListener('input', validatePasswords);
    confirmPasswordInput.addEventListener('input', validatePasswords);

    changePasswordForm.addEventListener('submit', function(event) {
        if (!validatePasswords()) {
            event.preventDefault(); // Stop form submission if passwords don't match
            alert('New passwords do not match.');
        }
        // Add minimum length check if desired
        if (newPasswordInput.value.length < 8) {
             event.preventDefault();
             alert('New password must be at least 8 characters long.');
        }
    });
</script>