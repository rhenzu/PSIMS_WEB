<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="/styles.css"> <style> /* Simple styles for feedback messages */
        .error { color: #a94442; background-color: #f2dede; border: 1px solid #ebccd1; padding: 10px; border-radius: 4px; margin-bottom: 15px; }
        #passwordError { display: none; color: red; margin-bottom: 10px; font-size: 0.9em; }
    </style>
</head>
<body>
    <div class="form-box">
        <h1>Reset Your Password</h1>
        <p>Please enter your new password below.</p>

        <% if (typeof error !== 'undefined' && error) { %>
            <p class="error"><%= error %></p>
        <% } %>

        <form action="/reset-password/<%= token %>" method="POST" id="resetPasswordForm">
            <label for="password">New Password</label>
            <input type="password" id="password" name="password" required minlength="8">
            <small>Must be at least 8 characters.</small>

            <label for="confirmPassword">Confirm New Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required minlength="8">
            <div id="passwordError">Passwords do not match.</div>

            <button type="submit">Reset Password</button>
        </form>
        <p><a href="/login">Back to Login</a></p>
    </div>

    <script>
        // Simple client-side validation
        const passwordInput = document.getElementById('password');
        const confirmInput = document.getElementById('confirmPassword');
        const errorDiv = document.getElementById('passwordError');
        const form = document.getElementById('resetPasswordForm');

        function validateResetPasswords() {
            if (passwordInput.value !== confirmInput.value) {
                errorDiv.style.display = 'block';
                return false;
            } else {
                errorDiv.style.display = 'none';
                return true;
            }
        }
        passwordInput.addEventListener('input', validateResetPasswords);
        confirmInput.addEventListener('input', validateResetPasswords);

        form.addEventListener('submit', function(event) {
            if (!validateResetPasswords()) {
                event.preventDefault();
                alert('Passwords do not match.');
            } else if (passwordInput.value.length < 8) {
                event.preventDefault();
                alert('Password must be at least 8 characters long.');
            }
        });
    </script>
</body>
</html>